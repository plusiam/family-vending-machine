{
  "name": "family-vending-machine",
  "version": "2.0.0",
  "description": "《엄마 자판기》 그림책 연계 교육 활동 웹 애플리케이션",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000 || npx http-server",
    "dev": "npx live-server",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "format": "prettier --write '**/*.{js,css,html,json}'",
    "test": "echo \"No tests specified\" && exit 0",
    "build": "echo \"No build process required\" && exit 0",
    "deploy": "gh-pages -d ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plusiam/family-vending-machine.git"
  },
  "keywords": [
    "education",
    "family",
    "vending-machine",
    "kids",
    "PWA",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "룰루랄라 한기쌤 <yeohanki@naver.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plusiam/family-vending-machine/issues"
  },
  "homepage": "https://plusiam.github.io/family-vending-machine/",
  "devDependencies": {
    "eslint": "^8.56.0",
    "gh-pages": "^6.1.1",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "prettier": "^3.2.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 4],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}