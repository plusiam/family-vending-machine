{
  "name": "family-vending-machine",
  "version": "2.0.0",
  "description": "우리 가족 자판기 만들기 - 《엄마 자판기》 그림책 연계 교육 활동",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080",
    "dev": "npx http-server -p 8080 -o",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "format": "prettier --write '**/*.{js,css,html,json,md}'",
    "test": "echo \"No tests specified\" && exit 0",
    "build": "npm run lint && npm run format",
    "serve": "npx serve",
    "deploy": "gh-pages -d ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plusiam/family-vending-machine.git"
  },
  "keywords": [
    "education",
    "family",
    "vending-machine",
    "korean",
    "javascript",
    "pwa",
    "web-app",
    "kids",
    "interactive",
    "educational-tool"
  ],
  "author": {
    "name": "룰루랄라 한기쌤",
    "email": "yeohanki@naver.com",
    "url": "https://github.com/plusiam"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plusiam/family-vending-machine/issues"
  },
  "homepage": "https://plusiam.github.io/family-vending-machine/",
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "http-server": "^14.1.1",
    "serve": "^14.2.1",
    "gh-pages": "^6.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 4],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": "warn",
      "no-console": "off"
    },
    "globals": {
      "CONFIG": "readonly",
      "VendingMachine": "readonly",
      "StorageManager": "readonly",
      "CaptureManager": "readonly",
      "ShareManager": "readonly",
      "I18n": "readonly",
      "html2canvas": "readonly",
      "QRCode": "readonly",
      "Kakao": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}